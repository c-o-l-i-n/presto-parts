{
  "name": "presto-parts",
  "productName": "Presto Parts",
  "version": "0.2.0",
  "description": "Restructure your sheet music to be by part, not by song.",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "ts-standard",
    "lint-fix": "ts-standard --fix",
    "test": "jest"
  },
  "keywords": [],
  "author": {
    "name": "Colin A. Williams",
    "email": "colin@prestoparts.org"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testRegex": "src/__tests__/.*spec\\.tsx?$",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "transform": {
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/app-icons/app-icon.icns"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "PrestoParts",
            "icon": "./assets/app-icons/app-icon.ico",
            "loadingGif": "./assets/app-icons/install-animation.gif",
            "setupExe": "${name}-windows-${version}.exe",
            "setupIcon": "./assets/app-icons/installer-icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "name": "${name}-mac-${version}",
            "icon": "./assets/app-icons/installer-icon.png",
            "overwrite": true
          }
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-webpack",
          "config": {
            "mainConfig": "./webpack/webpack.main.config.js",
            "renderer": {
              "config": "./webpack/webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/renderer/common/index.html",
                  "js": "./src/renderer/main-window/index.tsx",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/renderer/common/preload.ts"
                  }
                },
                {
                  "html": "./src/renderer/common/index.html",
                  "js": "./src/renderer/about-window/index.tsx",
                  "name": "about_window",
                  "preload": {
                    "js": "./src/renderer/common/preload.ts"
                  }
                }
              ]
            }
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "c-o-l-i-n",
              "name": "presto-parts"
            },
            "prerelease": true,
            "draft": true
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.5",
    "@electron-forge/maker-dmg": "^6.0.5",
    "@electron-forge/maker-squirrel": "^6.0.5",
    "@electron-forge/plugin-webpack": "^6.0.5",
    "@electron-forge/publisher-github": "^6.0.5",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "css-loader": "^6.7.3",
    "electron": "23.3.13",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^8.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-transform-stub": "^2.0.0",
    "node-loader": "^2.0.0",
    "sass": "^1.59.3",
    "sass-loader": "^13.2.1",
    "style-loader": "^3.3.2",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-standard": "^12.0.2",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "bulma": "^0.9.4",
    "bulma-prefers-dark": "^0.1.0-beta.1",
    "electron-context-menu": "^3.6.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "electron-unhandled": "^4.0.1",
    "pdf-lib": "^1.17.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "valid-filename": "^4.0.0"
  }
}
