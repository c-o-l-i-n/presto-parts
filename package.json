{
	"name": "presto-parts",
	"productName": "Presto Parts",
	"version": "0.1.1",
	"description": "Restructure your sheet music to be by part, not by song.",
	"main": ".webpack/main",
	"scripts": {
		"start": "electron-forge start",
		"package": "electron-forge package",
		"make": "electron-forge make",
		"publish": "electron-forge publish",
		"lint": "eslint --ext .ts,.tsx .",
		"test": "jest --coverage"
	},
	"keywords": [],
	"author": {
		"name": "Colin A. Williams",
		"email": "colin@prestoparts.org"
	},
	"license": "MIT",
	"config": {
		"forge": {
			"packagerConfig": {
				"icon": "./assets/app-icons/app-icon.icns"
			},
			"makers": [
				{
					"name": "@electron-forge/maker-squirrel",
					"config": {
						"name": "PrestoParts",
						"icon": "./assets/app-icons/app-icon.ico",
						"loadingGif": "./assets/app-icons/install-animation.gif",
						"setupExe": "${name}-windows-${version}.exe",
						"setupIcon": "./assets/app-icons/installer-icon.ico"
					}
				},
				{
					"name": "@electron-forge/maker-dmg",
					"config": {
						"name": "${name}-mac-${version}",
						"overwrite": true
					}
				},
				{
					"name": "@electron-forge/maker-deb",
					"config": {}
				},
				{
					"name": "@electron-forge/maker-rpm",
					"config": {}
				}
			],
			"plugins": [
				[
					"@electron-forge/plugin-webpack",
					{
						"mainConfig": "./webpack.main.config.js",
						"renderer": {
							"config": "./webpack.renderer.config.js",
							"entryPoints": [
								{
									"html": "./src/renderer/common/index.html",
									"js": "./src/renderer/main-window/index.tsx",
									"name": "main_window",
									"preload": {
										"js": "./src/renderer/common/preload.ts"
									}
								},
								{
									"html": "./src/renderer/common/index.html",
									"js": "./src/renderer/about-window/index.tsx",
									"name": "about_window",
									"preload": {
										"js": "./src/renderer/common/preload.ts"
									}
								}
							]
						}
					}
				]
			]
		}
	},
	"devDependencies": {
		"@electron-forge/cli": "^6.0.0-beta.65",
		"@electron-forge/maker-deb": "^6.0.0-beta.65",
		"@electron-forge/maker-dmg": "^6.0.0-beta.65",
		"@electron-forge/maker-rpm": "^6.0.0-beta.65",
		"@electron-forge/maker-squirrel": "^6.0.0-beta.65",
		"@electron-forge/plugin-webpack": "^6.0.0-beta.65",
		"@testing-library/dom": "^8.17.1",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.3.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/jest": "^28.1.7",
		"@types/react": "^18.0.17",
		"@types/react-dom": "^18.0.6",
		"@types/testing-library__jest-dom": "^5.14.5",
		"@typescript-eslint/eslint-plugin": "^5.33.1",
		"@typescript-eslint/parser": "^5.33.1",
		"@vercel/webpack-asset-relocator-loader": "^1.7.3",
		"css-loader": "^6.7.1",
		"electron": "20.0.2",
		"eslint": "^8.22.0",
		"eslint-plugin-import": "^2.26.0",
		"file-loader": "^6.2.0",
		"fork-ts-checker-webpack-plugin": "^7.2.13",
		"jest": "^28.1.3",
		"jest-environment-jsdom": "^28.1.3",
		"jest-transform-stub": "^2.0.0",
		"node-loader": "^2.0.0",
		"sass": "^1.54.4",
		"sass-loader": "^13.0.2",
		"style-loader": "^3.3.1",
		"ts-jest": "^28.0.8",
		"ts-loader": "^9.3.1",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"bulma": "^0.9.4",
		"bulma-prefers-dark": "^0.1.0-beta.1",
		"electron-context-menu": "^3.4.0",
		"electron-squirrel-startup": "^1.0.0",
		"electron-store": "^8.1.0",
		"electron-unhandled": "^4.0.1",
		"pdf-lib": "^1.17.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"valid-filename": "^4.0.0"
	}
}
