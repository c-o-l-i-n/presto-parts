{
	"name": "presto-parts",
	"version": "0.0.0",
	"description": "",
	"main": "main.js",
	"scripts": {
		"start": "npm run build-backend; npm run build-css; electron-forge start",
		"package": "electron-forge package",
		"make": "electron-forge make",
		"build-css": "sass frontend/scss:frontend/css",
		"watch-css": "npm run build-css -- --watch",
		"build-backend": "backend/env/bin/pip install -r backend/requirements.txt; backend/env/bin/pyinstaller --onefile --distpath backend/dist --workpath backend/build --specpath backend backend/backend.py"
	},
	"author": "Colin A. Williams",
	"license": "MIT",
	"devDependencies": {
		"@electron-forge/cli": "^6.0.0-beta.61",
		"@electron-forge/maker-deb": "^6.0.0-beta.61",
		"@electron-forge/maker-rpm": "^6.0.0-beta.61",
		"@electron-forge/maker-squirrel": "^6.0.0-beta.61",
		"@electron-forge/maker-zip": "^6.0.0-beta.61",
		"electron": "^15.1.0",
		"sass": "^1.42.1"
	},
	"dependencies": {
		"axios": "^0.23.0",
		"bulma": "^0.9.3",
		"electron-squirrel-startup": "^1.0.0"
	},
	"config": {
		"forge": {
			"packagerConfig": {},
			"makers": [
				{
					"name": "@electron-forge/maker-squirrel",
					"config": {
						"name": "presto_parts"
					}
				},
				{
					"name": "@electron-forge/maker-zip",
					"platforms": [
						"darwin"
					]
				},
				{
					"name": "@electron-forge/maker-deb",
					"config": {}
				},
				{
					"name": "@electron-forge/maker-rpm",
					"config": {}
				}
			]
		}
	}
}
